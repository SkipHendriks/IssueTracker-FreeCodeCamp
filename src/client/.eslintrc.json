{
  "extends": [
    "airbnb-typescript"
  ],
  "env": {
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint/eslint-plugin"
  ],
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"]}],
    "react/state-in-constructor": "off",
    "react/no-did-update-set-state": "off"
  }
}
